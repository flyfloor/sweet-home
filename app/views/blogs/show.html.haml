%link{rel:"stylesheet", href:"/css/blogs.css", media:"all"}
-provide(:title, @blog.title)
%section.article-content
	%article{id:"#{@blog.id}"}
		%h1=@blog.title
		%time=updated_time @blog
		%br
		%div
			.escaped-content=sanitize html_view @blog.content
		-unless @blog.tags.blank?
			%tags 
				=render @blog.tags
			%a.like-count
			%span.like-nums=@blog.like_count
		-if signed_in?
			=link_to 'edit', edit_blog_path(@blog)
	%comment
		%h3 Comments...
		%br
		%ul.comments
			-@blog.comments.each do |comment|
				%li.item=render comment
		%h3 Write Something
		.write-content
			=render "comments/form"
	%aside
		.author
			.author-avator
				%a{href:"http://www.douban.com/people/31660758/", target:"_blank"}
					%img{src:"/imgs/lacuna.jpg"}
			.author-info
				%h5 杀手马鹿
			%p.motto The things you own, end up oweing you.
		%section
			%h3 Latest...
			%ul.latest_articles
				-Blog.recent_blogs.each do |blog|
					%li=link_to blog.title, blog_path(blog)
	%nav#article_nav
		-if @blog.has_pre?
			=link_to "Older", blog_path(@blog.pre_blog), class: "pre_blog"
		-if @blog.has_next?
			=link_to 'Newer', blog_path(@blog.next_blog), class: "next_blog"
