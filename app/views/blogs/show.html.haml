%link{rel:"stylesheet", href:"/css/blogs.css", media:"all"}
-provide(:title, @blog.title)
%section.artical-content
	%artical{id:"#{@blog.id}"}
		%h1=@blog.title
		%span.create-time=@blog.updated_at.localtime.to_s(:db)
		%div
			%pre.cvt-content
				=@blog.content.gsub(/\r\n/, "<br>")
		%a.screen-top{href:"#", style:"display: none;", value:'返回顶部'} 
			%del
			%b
		-unless @blog.tags.blank?
			%h6 所有标签:
			%tags 
				=render @blog.tags
			%a.like-count
			%span.like-nums=@blog.like_count
	-if signed_in?
		=link_to '编辑', edit_blog_path(@blog)
	-if @blog.has_pre?
		=link_to "上一篇", blog_path(@blog.pre_blog)
	-if @blog.has_next?
		=link_to '下一篇', blog_path(@blog.next_blog)
	%h6 所有留言:
	=render @blog.comments
	%h6 写留言:
	=render "comments/form"

