-provide(:title, '登录')
%link{rel:"stylesheet", href:"/css/blogs.css", media:"all"}
#signin
	%h2 登录
	=form_for :admin, :url => '/signin', method: :post do |f|
		.field
			=f.label "邮箱:", :for => 'email'
			=f.text_field :email,class:"row min-width"
		.field
			=f.label "密码:", :for => 'password'
			=f.text_field :password, class:"row min-width"
		.field
			=f.submit '登录', class: 'btn'