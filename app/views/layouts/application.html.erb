<!DOCTYPE html>
<html>
<head>
  <title><%=title(yield(:title))%></title>
  <%= stylesheet_link_tag    "application", media:'all' %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "/css/app", media:'all'%>
  <%= stylesheet_link_tag "/css/font-awesome.min", media: 'all'%>
  <%= javascript_include_tag "/js/app", media:'all'%>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<nav class="author-info">
			<ul>
				<li>
					<a href="/" style="color:#fff;display:inline-block"><h4>落在深海</h4></a>
				</li>
				<li>
					<a href="/blogs" title="文章">文章</a>
				</li>
				<li>
					<a href="/photos" title="摄影">摄影</a>
				</li>
				<li>
					<a href="/tags" title="分类">分类</a>
				</li>
				<li style="position:absolute;right:160px;top:5px">
					<% if signed_in? %>
						<%= link_to "退出", signout_path, method: :delete%>
						<i class="icon-signout"></i>
					<% else %>
						<%= link_to "登录", signin_path %>
						<i class="icon-signin"></i>
					<% end %>
				</li>
			</ul>
		</nav>
	</header>
	<wrapper>
		<%= yield %>
	</wrapper>
	<footer>
		<span>©</span>
		<a href="http://www.douban.com/people/31660758/" target="_blank" style="font-size:12px;">lacuna fario</a>
	</footer>		
</body>
</html>
