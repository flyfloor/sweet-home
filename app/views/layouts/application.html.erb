<!DOCTYPE html>
<html>
<head>
  <title><%=title(yield(:title))%></title>
  <%= stylesheet_link_tag    "application", media:'all' %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "/css/app", media:'all'%>
  <%= stylesheet_link_tag "/css/font-awesome.min", media: 'all'%>
  <%= javascript_include_tag "/js/app", media:'all'%>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<nav class="author-info">
			<a href="/" style="display:inline-block;float:left;padding:4px 20px 3px;"><h4>杀手马鹿</h4></a>
			<ul class="main-nav">
				<li>
					<a href="/blogs" title="文章">文章</a>
				</li>
				<li>
					<a href="/pics" title="影像">影像</a>
				</li>
				<li>
					<a href="/tags" title="分类">分类</a>
				</li>
			</ul>
			<ul class="sign-status">
				<li style="position:absolute;right:160px;top:1px">
					<% if signed_in? %>
						<%= link_to "退出", signout_path, method: :delete%>
					<% else %>
						<%= link_to "登录", signin_path %>
					<% end %>
				</li>
			</ul>
		</nav>
	</header>
	<wrapper>
		<%= yield %>
		<script>
				//转义
				window.onload = (function(){
					var content_doms = document.getElementsByClassName("escaped-content");
					
					for(var i=0; i<content_doms.length; i++){
						original_content = content_doms[i].innerHTML;
						tempData = original_content.replace(/&lt;/gi,"<")
																			 .replace(/&gt;/gi, ">");
						content_doms[i].innerHTML = tempData;
					}
				});
		</script>
	</wrapper>
	<footer>
		<span>©</span>
		<a href="http://www.douban.com/people/31660758/" target="_blank">lacuna fario</a>
	</footer>		
</body>
</html>
